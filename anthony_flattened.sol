contract ImprovedTokenSwap is Ownable, ReentrancyGuard {
    ISwapRouter public immutable swapRouter;
    address public immutable WETH;

    event TokenSwapped(
        address indexed user,
        address indexed tokenIn,
        address indexed tokenOut,
        uint256 amountIn,
        uint256 amountOut
    );

    // Initialisation du routeur Uniswap et de WETH lors du déploiement
    constructor(address _swapRouter, address _WETH) Ownable(msg.sender) {
        require(_swapRouter != address(0), "Router address is invalid");
        require(_WETH != address(0), "WETH address is invalid");
        swapRouter = ISwapRouter(_swapRouter);
        WETH = _WETH;
    }

    // Fonction d'échange de tokens avec contrôle de sécurité et validations
    function swap(
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        uint256 amountOutMin,
        address recipient,
        uint256 deadline
    ) external nonReentrant {
        require(tokenIn != address(0) && tokenOut != address(0), "Token addresses cannot be zero");
        require(amountIn > 0, "Amount must be greater than zero");
        require(recipient != address(0), "Recipient address cannot be zero");
        require(block.timestamp <= deadline, "Transaction expired");

        // Transférer le tokenIn du msg.sender au contrat
        require(IERC20(tokenIn).transferFrom(msg.sender, address(this), amountIn), "Transfer of tokenIn failed");

        // Approuver le routeur Uniswap pour dépenser les tokens
        require(IERC20(tokenIn).approve(address(swapRouter), amountIn), "Approval of tokenIn failed");

        // Définir les paramètres pour le swap
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams({
            tokenIn: tokenIn,
            tokenOut: tokenOut,
            fee: 3000, // Frais de 0,3%
            recipient: recipient,
            deadline: deadline,
            amountIn: amountIn,
            amountOutMinimum: amountOutMin,
            sqrtPriceLimitX96: 0
        });

        // Exécuter le swap sur Uniswap
        uint256 amountOut = swapRouter.exactInputSingle(params);

        // Vérifier si le montant échangé est suffisant
        require(amountOut >= amountOutMin, "Received amount is less than minimum");

        // Émettre un événement pour enregistrer le swap
        emit TokenSwapped(msg.sender, tokenIn, tokenOut, amountIn, amountOut);
    }

    // Fonction pour retirer des fonds bloqués du contrat par l'administrateur
    function withdrawFunds(address token, uint256 amount, address to) external onlyOwner nonReentrant {
        require(to != address(0), "Invalid recipient");
        require(IERC20(token).transfer(to, amount), "Token transfer failed");
    }
}